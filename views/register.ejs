<%- include('header') %>

<main class="login-page">
    <div class="session " id="register-box">
      <form action="/register" method="post" class="log-in reg-form" autocomplete="off">
        <h4>PLEBISCITE<span> '24</span></h4>
        <p>
          Greetings! Before the Election, we kindly request you to complete the following form. Please feel free to provide the requested information.</p>
  
        <div class="floating-label">
          <input
            placeholder="Name"
            type="text"
            name="name"
            id="name"
            autocomplete="off"
            required
          />
          <label for="name">Name:</label>
        </div>
        
        <div class="floating-label">
            <input
              placeholder="NIC"
              type="text"
              name="NIC"
              id="NIC"
              autocomplete="off"
              required
              minlength="10"
            />
            <label for="email">NIC:</label>
          </div>

        <div class="floating-label">
          <input
            placeholder="Password"
            type="password"
            name="password"
            id="password"
            autocomplete="off"
            required
            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}"
          />
          <label for="password">Password:</label>
        </div>
        <h6>(atleast one digit&uppercase&lowercase letter && min 6)</h6>
        <button type="submit">Sign in</button>
        <a
          href="/login"
          class="discrete"

          >Already have an account? Login</a
        >
      </form>
      <div class="right">
        <style type="text/css">
          .st0 {
            fill: #fff;
          }
        </style>
      </div>
    </div>
  </main>
  

<%- include('footer') %>